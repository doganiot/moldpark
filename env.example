# MoldPark Environment Configuration
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=moldpark.com,www.moldpark.com
CSRF_TRUSTED_ORIGINS=https://moldpark.com,https://www.moldpark.com

# Database (Production için PostgreSQL)
DB_NAME=moldpark
DB_USER=moldpark_user
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Cache (Production için Redis)
REDIS_URL=redis://127.0.0.1:6379/1

# File Upload Limits
MAX_FILE_SIZE=52428800

# MoldPark Specific
MOLDPARK_VERSION=2.0.0
MOLDPARK_ENVIRONMENT=development

# Security (Production için)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Logging
LOG_LEVEL=DEBUG 